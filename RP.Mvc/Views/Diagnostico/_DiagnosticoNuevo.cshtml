

@model RP.Mvc.Models.DiagnosticoViewModel
<div class="col-md-12">
    <h5>Nuevo Diagnóstico</h5>
    <div class="row">
        <div class="form-horizontal">
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="form-group">
                <div class="col-md-2">
                    @Html.LabelFor(m => m.FechaDiagnostico, new { @class = "col-md-2 control-label" })
                </div>
                <div class="col-md-8">
                    @Html.LabelFor(m => m.FechaDiagnostico, new { @class = "col-md-2 control-label" })
                </div>
            </div>
                <div>
                <div class="form-group">
                    <div class="col-md-2">
                        @Html.LabelFor(m => m.NroSesiones, new { @class = "col-md-2 control-label" })
                    </div>
                    <div class="col-md-4">
                        @Html.TextBoxFor(m => m.NroSesiones, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-2">
                        @Html.LabelFor(m => m.Periodo, new { @class = "col-md-2 control-label" })
                    </div>
                    <div class="col-md-4">
                        @Html.TextBoxFor(m => m.Periodo, new { @class = "form-control" })
                    </div>
                </div>
            </div>
            

            <div class="form-group">
                <div class="col-md-2">
                    @Html.LabelFor(m => m.Diagnostico, new { @class = "col-md-2 control-label" })
                </div>
                <div class="col-md-10">
                    @Html.TextAreaFor(m => m.Diagnostico, new { @class = "form-control"})
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-2">
                    @Html.LabelFor(m => m.Tratamiento, new { @class = "col-md-2 control-label" })
                </div>
                <div class="col-md-10">
                    @Html.TextAreaFor(m => m.Tratamiento, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-2">
                    @Html.LabelFor(m => m.Observaciones, new { @class = "col-md-2 control-label" })
                </div>
                <div class="col-md-10">
                    @Html.TextAreaFor(m => m.Observaciones, new { @class = "form-control" })
                </div>
            </div>    


            <div class="form-group">
                <div class="col-md-6 float-right">
                    <input type="button" value="Guardar" name="btnGuardar" id="btnGuardar" class="btn btn-primary btn-sm" />
                    <input type="button" value="Cancelar" name="btnCancelar" id="btnCancelar" class="btn btn-danger btn-sm" />
                </div>
            </div>   

        </div>
    </div>
</div>
