                arrPuntajes.push(i);
                arrEsperado.push(5);
            }

            console.log(arrEvolucion);
            console.log(arrEsperado);
            console.log(arrPuntajes);
            new Chart(document.getElementById("line-chart"), {
                type: 'line',
                data: {
                    labels: arrPuntajes,
                    datasets: [{
                        data: arrEsperado,
                        label: "Esperado",
                        borderColor: "#3e95cd",
                        fill: false
